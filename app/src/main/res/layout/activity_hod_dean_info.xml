<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.Modules.Hod_dean_info"
    android:background="#0f111a"
    >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/deanhodProgress"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deanContainer"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEAN"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:id="@+id/dean_lable"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/deanDataContainer"
            android:layout_below="@+id/dean_lable"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/dean_img"
                android:src="@drawable/dean_img"
                android:background="@drawable/curve_box"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. GANESAN R"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/deanName"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor Grade 2"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/deanDesignation"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB1-1 Dean Cabin"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/deanCabin"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deancc.scse@vit.ac.in"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/deanEmail"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hodContainer"
        android:layout_below="@+id/deanContainer"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head of the Department"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:id="@+id/hod_lable"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hodDataContainer"
            android:layout_below="@+id/hod_lable"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/hod_img"
                android:src="@drawable/hod_img"
                android:background="@drawable/curve_box"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. NISHA V.M."
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/hodName"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor Grade 1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/hodDesignation"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB1 Faculty Cabin"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/hodCabin"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pcmsse.cc@vit.ac.in"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/hodEmail"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>